{
  "$schema":
    "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Views",
  "fileTypes": [".view", ".view.fake"],
  "patterns": [
    {
      "match": "^([A-Z][a-zA-Z0-9]*\\s*)$",
      "name": "keyword.block.views"
    },
    {
      "match": "^([A-Z][a-zA-Z0-9]*)\\s+[a-z]*\\s*.+$",
      "captures": {
        "1": {
          "name": "keyword.block.views"
        }
      }
    },
    {
      "match": "^#.+$",
      "name": "comment.views"
    },
    {
      "match": "^when.+$",
      "name": "entity.name.function.code.views"
    },
    {
      "match": "^onWhen.+$",
      "name": "onwhen.views"
    },
    {
      "begin": "^[a-z][a-zA-Z0-9]*\\s*",
      "end": "$",
      "patterns": [
        {
          "match": "(<[a-z][a-zA-Z0-9]*)?\\ +(s*(.+)$)",
          "captures": {
            "1": {
              "name": "entity.name.function.code.views"
            },
            "2": {
              "name": "string.value.views"
            }
          }
        },
        {
          "match": "<([a-z][a-zA-Z0-9]*)?",
          "name": "entity.name.function.code.views"
        },
        {
          "match": ".*item.*",
          "captures": {
            "0": {
              "name": "entity.name.function.code.views"
            }
          }
        },
        {
          "match": ".+$",
          "name": "string.value.views"
        }
      ]
    }
  ],
  "repository": {},
  "scopeName": "source.view"
}
