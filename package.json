{
  "name": "views",
  "displayName": "Views Tools language syntax",
  "description": "Views Tools UI/UX syntax support",
  "version": "1.1.1",
  "publisher": "uxtemple",
  "repository": "https://github.com/viewstools/syntax-vscode",
  "engines": {
    "vscode": "^1.12.0"
  },
  "categories": [
    "Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "views",
        "aliases": [
          "Views",
          "views"
        ],
        "extensions": [
          ".view"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "views",
        "scopeName": "source.view",
        "path": "./syntaxes/views.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "views",
        "language": "views",
        "uiTheme": "vs-dark",
        "path": "./themes/views-color-theme.json"
      }
    ]
  }
}
